{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": ".",                        // enable absolute imports from project root
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"]
    },
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
